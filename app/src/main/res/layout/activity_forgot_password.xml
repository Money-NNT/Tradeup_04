<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="@android:color/white"
    tools:context=".ForgotPasswordActivity">

    <!-- Icon -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_email_24"
        app:tint="@color/colorPrimary"
        android:layout_marginTop="64dp"
        tools:ignore="ContentDescription" />

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kh_i_ph_c_m_t_kh_u"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/nh_p_a_ch_email_ng_k_c_a_b_n_ch_ng_t_i_s_g_i_m_t_li_n_k_t_t_l_i_m_t_kh_u"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        tools:ignore="TextContrastCheck" />

    <!-- Input Email -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="@string/emaillll">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Nút Gửi -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSendResetEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/g_i"
        android:backgroundTint="@color/colorPrimary"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:cornerRadius="12dp"
        tools:ignore="VisualLintButtonSize" />

    <TextView
        android:id="@+id/textViewBackToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quay_l_i_ng_nh_p"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"/>

</LinearLayout>